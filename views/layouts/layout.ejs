<!DOCTYPE html>
<html>

<head>
  <title>CineTicket</title>

  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

  <!--STYLES-->
  <link rel="stylesheet" href="/dependencies/bootstrap.min.css">
  <link rel="stylesheet" href="/dependencies/vuetify.min.css">
  <link rel="stylesheet" href="/styles/importer.css">
  <link rel="stylesheet" href="/styles/style.css">
  <!--STYLES END-->
</head>



<body>
  <!--SCRIPTS-->
  <script src="/dependencies/sails.io.js"></script>
  <script src="/dependencies/vue.global.js"></script>
  <script src="/dependencies/bootstrap.min.js"></script>
  <script src="/dependencies/vue-router.global.js"></script>
  <script src="/dependencies/vuetify.min.js"></script>
  <!--SCRIPTS END-->
  <header>
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">CineTicket</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mb-2 mb-g-0 ms-auto">

            <!-- LOGGED-IN NAVIGATION -->
            <% if(req.me) { %>
              <!-- Added Block für Super user Navigation-->
              <% if(req.me.isSuperAdmin) { %>
                <div class="container-fluid">
                  <div class="collapse navbar-collapse custom-navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <ul class="navbar-nav mb-2 mb-lg-0 ms-auto">
                      <% if (req.me.isSuperAdmin) { %>
                        <li class="nav-item">
                          <a class="nav-link" href="/search">Filme durchsuchen</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="/movie">Film ändern</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="/category">Kategorie bearbeiten</a>
                        </li>
                        <% } %>
                    </ul>
                  </div>
                </div>
                <% } %>
                  <!-- Only in desktop nav -->
                  <div class="container-fluid">
                    <div class="collapse navbar-collapse custom-navbar-collapse justify-content-end" id="navbarSupportedContent">
                      <ul class="navbar-nav mb-5 mb-lg-0 ms-auto pt-2">
                        <li class="nav-item">
                          <a class="nav-link" href="/account">Account Settings</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="/logout">Sign out</a>
                        </li>
                      </ul>
                    </div>
                  </div>
                  <% } else { %>
                    <div class="container-fluid">
                      <!-- LOGGED-OUT NAVIGATION -->
                      <a class="btn btn-primary" href="/search"> Filme Suchen</a>
                      <a class="btn btn-primary" href="/login">Log in</a>
                      <a class="btn btn-primary" href="/signup">Sign up</a>

                    </div>
                    <% } %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <%- body %>

    <footer class="border-top p-3 bg-secondary-subtle">
      <div class="container-fluid d-flex justify-content-between align-items-center">
        <div>
          <a class="navbar-brand fs-5 text-decoration-none" href="/">CineTicket</a>
        </div>
        <div class="d-flex flex-column">
          <a class="fs-5 text-decoration-none" href="#">Impressum</a>
          <a class="fs-5 text-decoration-none" href="#">Datenschutz</a>
        </div>
      </div>
    </footer>
</body>

</html>