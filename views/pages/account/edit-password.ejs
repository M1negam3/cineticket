<div id="edit-password" class="content-container p-5" k>
  <h1 class="pb-3 headlines">Passwort ändern</h1>
  <div class="pt-5 pb-5 movies-list-container">
    <form action="/updatePassword" method="POST">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label for="password">Neues Passwort</label>
            <input class="form-control" id="password" name="password" type="password" placeholder="••••••••"
              autocomplete="new-password" focus-first>
            <div class="invalid-feedback" v-if="formErrors.password">Bitte ein gültiges Passwort eingeben.</div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label for="confirm-password">Passwort wiederholen</label>
            <input class="form-control" id="confirm-password" name="confirm-password" type="password"
              autocomplete="new-password" placeholder="••••••••">
            <div class="invalid-feedback" v-if="formErrors.confirmPassword">Die Passwörter stimmen nicht überein.</div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <cloud-error v-if="cloudError"></cloud-error>
        </div>
        <div class="col-sm-6">
          <div class="form-group text-right pt-4">
            <a class="btn btn-outline-info" href="/account">Abbrechen</a>
            <button type="submit" class="btn btn-success">Speichern</button>
          </div>
        </div>
      </div>
      </ajax-form>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>