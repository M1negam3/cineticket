<div class="content-container p-5 d-flex justify-content-center">
    <div class="w-75">
        <h2 class="pb-3">Filme</h2>
        
        <form class="pb-3" action="/search">
            <input type="text" value="" length="20" name="q">
            <button class="btn btn-primary" type="submit">Suchen</button>
        </form>

        <div class="pt-3">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <th>Name</th>
                    <th>Dauer</th>
                    <th>Beschreibung</th>
                </thead>
                <tbody>
                    <% movies.forEach(function(movie){ %>
                        <tr>
                            <td>
                                <%= movie.name %>
                            </td>
                            <td>
                                <%= movie.duration %>
                            </td>
                            <td>
                                <%= movie.description %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>