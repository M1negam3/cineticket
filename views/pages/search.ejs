<div class="content-container p-md-5 p-2 d-flex justify-content-center">
    <div class="side-space">
        <h2 class="pb-3">Filme</h2>

        <form class="pb-5" action="/search">
            <div class="mb-3">
                <div class="form-group">
                    <label class="col-form-label-lg">Titel</label>
                    <input class="form-control" type="text" value="<%= req.query.q %>" length="20" name="q">
                </div>
                <div class="form-group">
                    <label class="col-form-label-lg">Kategorie</label>
                    <select class="form-control" name="catQ">
                        <option value="0">
                            All
                        </option>
                        <% categories.forEach(function(category){ %>
                            <option value="<%= category.id %>" <% if(category.id == req.query.catQ) { %> selected <% } %>>
                                <%= category.name %>
                            </option>
                            <% }); %>
                    </select>
                </div>
            </div>
            <button class="btn btn-primary" type="submit">Suchen</button>
        </form>

        <div class="pt-3 table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <th>Name</th>
                    <th>Dauer</th>
                    <th>Beschreibung</th>
                    <th>Kategorie</th>
                </thead>
                <tbody>
                    <% movies.forEach(function(movie){ %>
                        <tr>
                            <td>
                                <%= movie.name %>
                            </td>
                            <td>
                                <%= movie.duration %>
                            </td>
                            <td>
                                <%= movie.description %>
                            </td>
                            <% if(movie) { %>
                                <td>
                                    <%= movie.category.name %>
                                </td>
                                <% } %>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>