<div class="content-container p-md-5 p-2 d-flex justify-content-center">
    <div class="side-space movies-list-container">
        <h2 class="pb-3 headlines">Film hinzufügen</h2>
        <form action="/movie" method="post">
            <div>
                <div class="form-group">
                    <label class="col-form-label-lg">Name</label>
                    <input type="text" class="form-control" maxlength="80" name="name">
                </div>
                <div class="form-group">
                    <label class="col-form-label-lg">Länge</label>
                    <input type="text" class="form-control" maxlength="8" name="duration">
                </div>
                <div class="form-group">
                    <label class="col-form-label-lg">Beschreibung</label>
                    <input type="text" maxlength="80" class="form-control" name="description">
                </div>
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Kategorie</label>
                 <select class="form-control" name="category">
                <% categories.forEach(function(category){ %>
                    <option value="<%= category.id %>"><%= category.name %></option>
                <% }); %>
                </select>
            </div>
            <div class="mt-5">
                <button type="submit" class="btn btn-success color-white">Hinzufügen</button>
                <a class="btn btn-danger" href="/movie">Abbrechen</a>
            </div>
        </form>
    </div>
</div>