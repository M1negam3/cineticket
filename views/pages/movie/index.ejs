<div class="content-container p-5 d-flex justify-content-center">
    <div class="w-75">
        <h2>Filme</h2>

        <div class="pt-3">
            <table class="table table-striped table-hover table-bordered text-center">
                <thead>
                    <th>Name</th>
                    <th>Dauer</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </thead>
                <tbody class="align-middle">
                    <% movies.forEach(function(movie){ %>
                        <tr>
                            <td>
                                <%= movie.name %>
                            </td>
                            <td>
                                <%= movie.duration %>
                            </td>
                            <td><a class="btn btn-secondary" href="/movie/<%= movie.id %>">anzeigen</a></td>
                            <td><a class="btn btn-warning" href="/movie/<%= movie.id %>/edit">ändern</a></td>
                            <td><a class="btn btn-danger" href="/movie/<%= movie.id %>/delete">löschen</a></td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <a class="btn btn-success mt-3" href="/movie/new">Hinzufügen</a>
        </div>
    </div>
</div>