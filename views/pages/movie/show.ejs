<div class="content-container p-5 d-flex flex-column align-center">
    <div>
        <h1 class="headlines pb-5">Filmdetails</h1>
    </div>
    <div class="card h-100 w-50 table-responsive movies-list-container">
        <div>
            <table class="table table-hover table-bordered m-0">
                <tr>
                    <th>
                        Name
                    </th>
                    <td>
                        <%= movie.name %>
                    </td>
                </tr>
                <tr>
                    <th>
                        ID
                    </th>
                    <td>
                        <%= movie.id %>
                    </td>
                </tr>
                <tr>
                    <th>
                        Dauer
                    </th>
                    <td>
                        <%= movie.duration %> Minuten
                    </td>
                </tr>
                <tr>
                    <th>
                        Beschreibung
                    </th>
                    <td>
                        <%= movie.description %>
                    </td>
                </tr>
                <tr>
                    <th>
                        Kategorien
                    </th>
                    <% if(movie.category) { %>
                        <td>
                            <%= movie.category.name %>
                        </td>
                        <% } %>
                </tr>
                <tr>
                    <th>
                        Bilddateiname
                    </th>
                    <td>
                        <%= movie.image %>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="mt-5 movies-list-container">
        <a class="btn btn-secondary" href="/category">Zur√ºck</a>
    </div>
</div>