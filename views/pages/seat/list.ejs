
<div id="app">
    <router-view></router-view>
  </div>

<!-- Vue.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/vue@2"></script>

<!-- VueRouter CDN (Version 4) -->
<script src="https://cdn.jsdelivr.net/npm/vue-router@3"></script>


<script type="module">

  
    // Import Ihrer Vue-Komponenten
    import SeatSelection from '/vue/seat-selection.js';
    import AddSeats from '/vue/add-seat.js';

    const routes = [
        { path: '/', component: SeatSelection },
        { path: '/add-seats', component: AddSeats },
      ]
  
    // Erstellen Sie den Router
    const router = VueRouter.createRouter({
      history: VueRouter.createWebHashHistory(),
      routes,
    });
  
    // Erstellen Sie die Vue-App und binden Sie den Router ein
    const app = Vue.createApp({});
    app.use(router);
    app.mount('#app');
  </script>
  
  

  
  