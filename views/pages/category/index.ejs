<div class="content-container p-md-5 p-2 d-flex justify-content-center">
    <div class="side-space movies-list-container">
        <h2 class="pb-3 headlines">Kategorien</h2>

        <div class="pb-5 table-responsive">
            <table class="table table-striped table-hover table-bordered text-center">
                <thead>
                    <th>Name</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </thead>
                <tbody class="align-middle">
                    <% categories.forEach(function(category){ %>
                        <tr>
                            <td>
                                <%= category.name %>
                            </td>
                            <td><a class="btn btn-secondary" href="/category/<%= category.id %>">anzeigen</a></td>
                            <td><a class="btn btn-warning" href="/category/<%= category.id %>/edit">ändern</a></td>
                            <td><a class="btn btn-danger" href="/category/<%= category.id %>/destroy">löschen</a></td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>

            <a class="btn btn-primary" href="/category/new">Hinzufügen</a>
        </div>
    </div>
</div>