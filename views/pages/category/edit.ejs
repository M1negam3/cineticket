<div class="content-container p-5 d-flex justify-content-center">
    <div class="w-75">
        <form action="/category/<%= category.id %>/update" method="post">
            <div class="form-group">
                <label class="col-form-label-lg">Name</label>
                <input type="text" class="form-control" value="<%= category.name %>" maxlength="80" name="name">
            </div>
            <div class="mt-5">
                <button type="submit" class="btn btn-success">Speichern</button>
                <a class="btn btn-danger" href="/category">Abbrechen</a>
            </div>
        </form>
    </div>
</div>
