<div class="content-container p-md-5 p-2 d-flex justify-content-center">
    <div class="side-space movies-list-container">
        <h2 class="pb-3 headlines">Kategorie hinzufügen</h2>
        <form action="/category" method="post">
            <div>
                <div class="form-group">
                    <label class="col-form-label-lg">Name</label>
                    <input type="text" class="form-control" maxlength="80" name="name" pattern="[a-zA-Z0-9\s]+" title="Nur Buchstaben und Ziffern erlaubt" required>
                </div>
            </div>
            <div class="mt-5">
                <button type="submit" class="btn btn-success color-white">Hinzufügen</button>
                <a class="btn btn-danger" href="/category">Abbrechen</a>
            </div>
        </form>
    </div>
</div>